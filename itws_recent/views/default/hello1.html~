function flash()
{
//	alert("hi");
	ans = document.getElementById("getname").value ;
	if(ans == "") {
		document.getElementById("options").innerHTML = "";
		return;
	}
	var xmlhttp;
	if (window.XMLHttpRequest)
	{// code for IE7+, Firefox, Chrome, Opera, Safari
		xmlhttp=new XMLHttpRequest();
	}
	else
	{// code for IE6, IE5
		xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
	}
	xmlhttp.onreadystatechange=function()
	{
		if (xmlhttp.readyState==4 && xmlhttp.status==200)
		{
			/*d = eval("(" + xmlhttp.responseText + ")");*/
			document.getElementById("options").innerHTML=xmlhttp.responseText;/*"<div >" + d["final"][0] + "</div>" + "<div>" + d["final"][1] + "</div>";*/

		}
	}
	xmlhttp.open("GET","names?start=" + ans ,true);
	xmlhttp.send();
}
function f(i){
	ans = document.getElementById(i);
	ans2 = ans.innerHTML;
	ans3 = ans2 + "u";
	ans4 = document.getElementById(ans3);
	ans5 = ans4.innerHTML;
	e = document.getElementById("getusername");
	e.value = ans5;
	d = document.getElementById("getname");
	d.value = ans2;
	document.getElementById("options").innerHTML = "";
	l(i);
}
window.addEventListener('load', main);
</script>
